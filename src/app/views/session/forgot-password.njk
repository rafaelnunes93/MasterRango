{% extends "layout.njk" %}

{% block content %}

    <section class="password container form">

        <form method="POST" action="/users/forgot-password">
            <div class="header">
                <h2>Esqueceu sua senha?</h2>
            </div>

            <div class="item">
                <div>Email</div>
                <div class="input">
                    <input type="email" name="email" value="{{user.email}}" placeholder="Digite o email cadastrado" onblur="Validate.apply(this , 'isEmail')"/>
                </div>
            </div>
            <button class="button" type="submit">Enviar</button>

        </form>

    </section>

{% endblock content %}