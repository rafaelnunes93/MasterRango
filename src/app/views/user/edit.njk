{% extends "layout.njk" %}

{% block content %}
    <section class="users-options container2">

        {% include '../parts/userPerfil.njk' %}
        
        <section class="conteudo">

              <form id="form-foto" action="/users?_method=PUT" method="POST">

                        <div class="header">
                            <h3>ALTERE SUA FOTO DO PERTFIL</h3>
                        </div>

                    <div class="fields-img">
                        <img src="../images/chefimage.png" alt="">
                    </div>
                    <div class="header">
                         <input id="photos-input" type="file" name="photos" multiple="multiple" accept="image/*" onchange="PhotosUpload.handleFileInput(event)"/>
                          <p class="headerButon">Alterar Foto</p>
                          <button class="button" type="submit">Salvar Foto</button>
                    </div> 
                </form>

                <form id="form-dados"  method="POST" action="/users?_method=PUT">
                    <div class="header">
                        <h3>EDITAR PERTFIL</h3>
                    </div>
                   

                    <div class="fields">
                        {% include 'user/fields.njk' %}

                        <input type="hidden" name="id" value={{user.id}}>
                    </div>

                     <button class="button" type="submit">Salvar</button>

                 </form>

               
                
                    <form id="form-delete" action="/users?_method=DELETE" method="POST">

                        <div class="header">
                            <h3></h3>
                        </div>

                        <input type="hidden" name="id" value={{user.id}}>
                        <button class="button delete" type="submit">Deletar minha conta</button>
                     </form>
                

        </section>

    </section>

    <script>
        const formDelete = document.querySelector("#form-delete")
        formDelete.addEventListener("submit", function (event) {
            const confirmation = confirm("Realmente Deseja Deletar sua conta? Esta operação não podera ser desfeita")
            if (!confirmation) {
                event.preventDefault()
            }
        })
    </script>

{% endblock content %}